.nested-fields.option-nested-fields
  .form-row.align-items-center.mt-15
    .col-auto.col-9
      .input-group.input-group-option
        .input-group-prepend
          .input-group-text= f.object.id
        = f.text_field :answer, class: 'form-control', placeholder: I18n.t('placeholder.option.answer')
        - if f.object.errors[:answer].any?
          span.error.error-option= f.object.errors[:answer].join(', ')
    .col-auto.col
      .form-check
        = f.check_box :correct, class: 'form-check-input', type: 'radio', id: "checkbox-option#{f.object.id}"
        label.form-check-label for="checkbox-option#{f.object.id}"
          | Correct Answer
    .col-auto.col
      = link_to_remove_association "Remove", f, class: 'btn btn-light btn-remove'